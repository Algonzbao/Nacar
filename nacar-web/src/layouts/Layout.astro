---
import '@fontsource/karla';
import '@fortawesome/fontawesome-free/css/all.min.css';
import { ClientRouter } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<title>{title}</title>
		<meta name="description" content="Tus campamentos y eventos personalizados">
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<ClientRouter/>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	body {
		font-family: "Karla", sans-serif;
		margin: 0;
		padding: 0;
	}

	.navbar ul {
		list-style: none;
		display: flex;
		justify-content: space-around;
		background-color: #6a42e3;
		padding: 1em;
	}

	.navbar ul li a {
		color: white;
		text-decoration: none;
	}

	.footer {
		text-align: center;
		padding: 1em;
		background-color: #f4f4f4;
	}

	main {
		padding: 2em;
	}
	/* Estilos adicionales para manejar el footer oculto al principio */
	.footer-hidden {
		transform: translateY(100%); /* Mueve el footer fuera de la vista */
		transition: transform 0.3s ease-in-out; /* Animación suave al aparecer */
	}

	.footer-visible {
		transform: translateY(0); /* Vuelve el footer a la vista */
	}

	/* Estilos básicos para el componente About */
	.about-container {
		font-family: Arial, sans-serif;
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 16px;
	}

	h1 {
		margin-bottom: 24px;
	}

	.image-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr); /* 3 columnas */
		grid-template-rows: repeat(2, 1fr); /* 2 filas */
		gap: 16px;
		max-width: 960px;
		width: 100%;
		padding: 16px;
	}

	.image-grid img {
		width: 100%; /* Asegura que las imágenes sean del mismo tamaño */
		height: 100%;
		object-fit: cover; /* Mantiene las proporciones de las imágenes */
		border-radius: 8px; /* Bordes redondeados */
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra suave */
	}

	.parallax-effect {
		transform: translateY(0);
		transition: transform 0.1s ease-out;
	}

	.parallax-container:hover .parallax-effect {
		transform: translateY(
			20px
		); /* Ajusta el valor para controlar el desplazamiento */
	}
</style>
